{
  "name": "koda",
  "version": "1.0.0",
  "description": "A Discord bot for the Koda Galaxy server.",
  "main": "dist/index.js",
  "scripts": {
    "build": "swc src -d dist",
    "watch": "swc src -d dist -w",
    "clean": "node scripts/clean.mjs",
    "start": "node --enable-source-maps .",
    "dev": "yarn build && yarn start",
    "watch:start": "tsc-watch --onSuccess \"node ./dist/index.js\"",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "import": {
    "#lib/*": "./dist/lib/*.js",
    "#utils/*": "./dist/lib/utils/*.js",
    "#env/*": "./dist/lib/utils/env/*.js"
  },
  "keywords": [
    "discord.js",
    "discord"
  ],
  "author": "Anish-Shobith",
  "license": "MIT",
  "dependencies": {
    "@discordjs/collection": "^0.6.0",
    "@sapphire/decorators": "^4.3.4",
    "@sapphire/framework": "next",
    "@sapphire/plugin-editable-commands": "^1.2.0",
    "@sapphire/plugin-hmr": "^1.2.0",
    "@sapphire/plugin-logger": "^2.2.1",
    "@sapphire/type": "^2.2.4",
    "@sapphire/utilities": "^3.6.2",
    "colorette": "^2.0.16",
    "discord.js": "^13.7.0",
    "dotenv-cra": "^3.0.2",
    "figlet": "^1.5.2",
    "node-cron": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "type-fest": "^2.13.0"
  },
  "devDependencies": {
    "@sapphire/prettier-config": "^1.4.3",
    "@sapphire/ts-config": "^3.3.4",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.189",
    "@types/figlet": "^1",
    "@types/node": "^17.0.35",
    "@types/node-cron": "^3",
    "@types/prettier": "^2",
    "@types/ws": "^8.5.3",
    "prettier": "^2.6.2",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.4"
  },
  "prettier": "@sapphire/prettier-config",
  "eslintConfig": {
    "extends": "@sapphire",
    "ignorePatterns": [
      "node_modules/",
      "*build/",
      "*dist/",
      "*prod/"
    ]
  }
}
