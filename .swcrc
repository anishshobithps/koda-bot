{
	"jsc": {
		"parser": {
    		"syntax": "typescript",
    		"tsx": false,
        	"decorators": true
    	},
    	"target": "es2022",
    	"keepClassNames": true,
    	"transform": {
      		"decoratorMetadata": true,
        	"legacyDecorator": true
    	},
		"paths": {
			"#lib/*": ["./lib/*"],
			"#utils/*": ["./lib/utils/*"],
			"#env/*": ["./lib/utils/env/*"]
		},
		"baseUrl": "./src"
  	},
    "module": {
		"type": "commonjs",
		"strict": true,
		"strictMode": true
    },
    "sourceMaps": true
}
